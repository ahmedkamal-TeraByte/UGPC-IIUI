<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - UGPC-IIUI</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   
</head>

<body>
<div  style="padding-top: 0px; margin-top: -50px; background-color:#015927">
    <img src="/Images/iiui-logo.jpg" style="height:150px ; width: 800px"/>
</div>

@if (User.IsInRole("Student"))
{
    @Html.Partial("_StudentNavBar")
}
else if (User.IsInRole("Supervisor"))
{
    @Html.Partial("_ProfessorNavBar")
}
else
{
    @Html.Partial("_NavBar")
}

<div >
    @RenderBody()
    
</div>

<hr />
<div >
    <footer>
        <p>&copy; @DateTime.Now.Year - UGPC-IIUI</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
