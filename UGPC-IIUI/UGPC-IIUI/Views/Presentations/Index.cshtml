@model IEnumerable<UGPC_IIUI.Models.Presentation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Schedule Presentations", "Create",null ,new{@class="btn btn-primary"})
    
    <br/>
    
    <lablel>@ViewBag.Count</lablel> Proposals are pending
</p>
@if (Model.Any())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Project.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.PresentationId}) |
                    @Html.ActionLink("Details", "Details", new {id = item.PresentationId}) 
                    @*| @Html.ActionLink("Delete", "Delete", new {id = item.PresentationId}) *@
                </td>
            </tr>
        }

    </table>
}

else
{
    <p>Woops ! No work pending! :-D</p>
}
