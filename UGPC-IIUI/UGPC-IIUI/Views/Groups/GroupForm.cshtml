@model UGPC_IIUI.ViewModels.GroupViewModel  
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Group</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @if (User.IsInRole("Admin"))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Student1Id, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.Student1Id, new SelectList(Model.Users, "Id", "Name"), new { @class = "form-control"})
                </div>
            </div>
        }
        else
        {
            @Html.HiddenFor(m=>m.Student1Id)
            <div class="form-group">
                @Html.LabelFor(m => m.Student1Id, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m=> m.Student1.Name, new {@class = "form-control" , @readonly="true"})
                </div>
            </div>
        }

        <div class="form-group">
            @Html.LabelFor(m => m.Student2Id, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Student2Id, new SelectList(Model.Users, "Id", "Name"), new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
    <p>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
    </p>
}

