@model UGPC_IIUI.Models.Group
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Are you sure you want to delete this Group?</h3>

<div>
    <hr />


    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Student1Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Student1.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Student2Id)

        <dd>
            @Html.DisplayFor(model => model.Student2.Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.Student1Id)
        @Html.HiddenFor(m => m.Student2Id)
        
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            @Html.ActionLink("Back to List", "Index", new { @id = @Model.Id },new{@class="btn btn-secondary"})
        </div>
    }
</div>

