@model UGPC_IIUI.ViewModels.ProjectViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("test", "Projects", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Project</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
       

        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Status, new SelectList(ViewBag.Status1, "Value", "Text"), new { @class = "form-control js-ddList", @id = "ddList" })
            </div>
        </div>


       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" id="createbtn" />
            </div>
        </div>
    </div>
}


<div class="modal fade" data-keyboard="false" id="getCodeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body">

                @* @using (Html.BeginForm("Check","Projects")) *@
                @* { *@
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Status, new { @class = "form-control", @id = "txtArea" })
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>


                    <div class="modal-footer form-group">
                        <button id="cancelbtn" type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                        <input id="savebtn" type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>

                @* } *@

            </div>

        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
    
    <script>
        $(document).ready(function () {
           
            var status = "@Model.Status";
            
            $("#ddList").change(function() {
                var a = $("#ddList option:selected").text();
                if (a === "Proposal Accepted") {
                    $("#getCodeModal").modal("show");
                }
            });

            $("#cancelbtn").click(function() {
                
                $("#ddList").val(status);
                $("#ddList").find("Option[Value = 'Rejected']").remove();
            });
        });
    </script>
}
