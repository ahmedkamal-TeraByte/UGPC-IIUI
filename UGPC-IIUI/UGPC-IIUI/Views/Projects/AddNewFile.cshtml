
@model UGPC_IIUI.ViewModels.FileViewModel
@{
    ViewBag.Title = "AddNewFile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddNewFile</h2>
@using (Html.BeginForm("AddNewFile", "Projects", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        
        @Html.HiddenFor(m=>m.ProjectId)
        <div class="form-group">
            @Html.LabelFor(m => m.ProjectFile, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ProjectFile, new {type = "file", @class = "form-control", @id = "ProjectFile"})
                @Html.ValidationMessageFor(model => model.ProjectFile, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.FileType, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.FileType, new SelectList(ViewBag.FileTypes, "Value", "Text"), new {@class = "form-control"})

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

