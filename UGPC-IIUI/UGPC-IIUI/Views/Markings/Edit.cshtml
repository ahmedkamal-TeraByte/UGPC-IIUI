@model UGPC_IIUI.Models.Marking

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Marks</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MarkingId)
        @Html.HiddenFor(model=>model.ProjectId)

        <div class="form-group">
            <label class="control-label col-md-2">Project Title</label>
            <div class="col-md-10">
                @Html.TextBoxFor(m=>m.Project.Title,new { @class = "form-control", @readonly="true" })
                @Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Presentation Marks</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PresentationMarks, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PresentationMarks, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Supervision Marks</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SupervisorMarks, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SupervisorMarks, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Internal Marks</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.InternalMarks, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InternalMarks, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">External Marks</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ExternalMarks, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ExternalMarks, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index",null, new{@class="btn btn-default"})
</div>
